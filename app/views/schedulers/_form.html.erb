<% @schedule = Schedule.new(project_id: project.id) %>
<!-- blue, orange, green, winered, purple, brown, pink, gray, yellow, clearblue -->
<% color_categories = [["blue", "#1f77b4"],
                       ["orange", "#ff7f0e"],
                       ["green", "#2ca02c"],
                       ["winered", "#d62728"],
                       ["purple", "#9467bd"],
                       ["brown", "#8c564b"],
                       ["pink", "#e377c2"],
                       ["gray", "#7f7f7f"],
                       ["yellow", "#bcbd22"],
                       ["clearblue","#17becf"]] %>
<%= labelled_form_for :schedule, @schedule,
                      :url => {:controller => 'schedulers',
                               :action => 'create',
                               :project_id => project.id },
                     :remote => true do |form| %>
  <%= form.text_field :title %>
  <%= form.text_field :license, title: 'ライセンス数' %>
  <%= form.select :color, color_categories %>
  <%= form.hidden_field :project_id, value: project.id %>
  <%= form.submit '作成' %>
<% end %>
